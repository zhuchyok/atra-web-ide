{
  "title": "Chat System Metrics",
  "uid": "chat-metrics",
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Requests per second",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(chat_requests_total[5m])",
          "legendFormat": "{{mode}} - {{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Request Duration (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(chat_request_duration_seconds_bucket[5m])) by (le, mode, endpoint))",
          "legendFormat": "{{mode}} - {{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "RAG Cache Hit Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(rag_cache_hits_total[5m]) / (rate(rag_requests_total[5m]) + 1e-9)",
          "legendFormat": "{{cache_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Active Requests",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "active_requests",
          "legendFormat": "Active",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Plan Requests Total",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
      "targets": [
        {
          "expr": "increase(plan_requests_total[1h])",
          "legendFormat": "Plans (1h)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "Errors",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "rate(errors_total[5m])",
          "legendFormat": "{{error_type}} - {{component}}",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 38,
  "timezone": "browser",
  "refresh": "10s"
}
