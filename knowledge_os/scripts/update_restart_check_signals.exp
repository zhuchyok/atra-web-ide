# 6. ЗАПУСК БОТА
send "echo '=== ЗАПУСК БОТА ==='\r"
expect "# "
send "nohup python3 main.py > bot_startup.log 2>&1 &\r"
expect "# "
send "sleep 3\r"
expect "# "

# 7. ПРОВЕРКА, ЧТО БОТ ЗАПУЩЕН
send "echo '=== ПРОВЕРКА ЗАПУСКА БОТА ==='\r"
expect "# "
send "ps aux | grep 'python3 main.py' | grep -v grep\r"
expect "# "

# 8. ПРОВЕРКА ЛОГОВ НА СИГНАЛЫ (последние 50 строк)
send "echo '=== ПРОВЕРКА ЛОГОВ НА СИГНАЛЫ ==='\r"
expect "# "
send "tail -50 system_improved.log 2>/dev/null | grep -E 'SIGNAL|сигнал|signal|SEND|отправлен|✅.*LONG|✅.*SHORT' | tail -20\r"
expect "# "

# 9. ПРОВЕРКА ЛОГА СИГНАЛОВ
send "echo '=== ЛОГ СИГНАЛОВ (logs/signals.log) ==='\r"
expect "# "
send "tail -30 logs/signals.log 2>/dev/null | tail -20\r"
expect "# "

# 10. ПРОВЕРКА ПОСЛЕДНИХ ЦИКЛОВ
send "echo '=== ПОСЛЕДНИЕ ЦИКЛЫ ==='\r"
expect "# "
send "grep 'Завершение цикла обработки' system_improved.log 2>/dev/null | tail -5\r"
expect "# "

# 11. ПРОВЕРКА ОШИБОК
send "echo '=== ПОСЛЕДНИЕ ОШИБКИ ==='\r"
expect "# "
send "tail -30 system_improved.log 2>/dev/null | grep -E 'ERROR|Exception|Traceback|get_ohlc_with_fallback|get_filtered_top_usdt_pairs_fast' | tail -10\r"
expect "# "

# 12. ПРОВЕРКА СТАТИСТИКИ СИГНАЛОВ
send "echo '=== СТАТИСТИКА СИГНАЛОВ (signals_log.csv) ==='\r"
expect "# "
send "tail -10 signals_log.csv 2>/dev/null\r"
expect "# "

# 13. ПРОВЕРКА СТАРТОВОГО ЛОГА
send "echo '=== СТАРТОВЫЙ ЛОГ БОТА ==='\r"
expect "# "
send "tail -30 bot_startup.log 2>/dev/null\r"
expect "# "

send "exit\r"
expect eof

