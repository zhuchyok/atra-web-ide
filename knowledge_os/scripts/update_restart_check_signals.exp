#!/usr/bin/expect -f
# Скрипт для обновления кода, перезапуска бота и проверки сигналов

set timeout 60
set server "185.177.216.15"
set user "root"
set password "u44Ww9NmtQj,XG"

spawn ssh $user@$server

expect {
    "password:" {
        send "$password\r"
    }
    "yes/no" {
        send "yes\r"
        expect "password:"
        send "$password\r"
    }
}

expect "# "

# Переходим в директорию проекта
send "cd /root/atra\r"
expect "# "

# 1. ОБНОВЛЕНИЕ КОДА
send "echo '=== ОБНОВЛЕНИЕ КОДА (git pull) ==='\r"
expect "# "
send "git pull\r"
expect {
    "# " {
        # Успешно
    }
    timeout {
        send "\r"
        expect "# "
    }
}

# 2. ОСТАНОВКА БОТА
send "echo '=== ОСТАНОВКА БОТА ==='\r"
expect "# "
send "pkill -f 'python3 main.py'\r"
expect "# "
send "sleep 2\r"
expect "# "

# 3. ПРОВЕРКА, ЧТО БОТ ОСТАНОВЛЕН
send "echo '=== ПРОВЕРКА ПРОЦЕССОВ ==='\r"
expect "# "
send "ps aux | grep 'python3 main.py' | grep -v grep\r"
expect "# "

# 4. УДАЛЕНИЕ LOCK ФАЙЛОВ
send "echo '=== УДАЛЕНИЕ LOCK ФАЙЛОВ ==='\r"
expect "# "
send "rm -f atra.lock polling.lock\r"
expect "# "

# 5. ЭКСПОРТ ПЕРЕМЕННЫХ ОКРУЖЕНИЯ
send "echo '=== ЭКСПОРТ ПЕРЕМЕННЫХ ОКРУЖЕНИЯ ==='\r"
expect "# "
send "export ATRA_ENV=prod\r"
expect "# "
send "export TELEGRAM_TOKEN=PROD_TOKEN_REDACTED\r"
